<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EBurst" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!-- Action button background (somehow, both are needed) -->
        <item name="floatingActionButtonPrimaryStyle">@color/colorPrimaryLightBlue</item>
        <item name="colorAccent">@color/colorPrimaryLightBlue</item>

        <!-- icon color-->
        <item name="android:tint">@color/white</item>

        <!--   background of buttons -->
        <item name="colorPrimary">@color/colorSelectedBlue</item>

        <!--   A darker variant of the primary color, used for
               the status bar (on Android 5.0+) and contextual app bars. -->
        <item name="colorPrimaryDark">@color/black</item>

        <item name="android:windowBackground">@color/windowDarkGray</item>

        <item name="colorOnPrimary">@color/lightGray</item>


        <item name="cardViewStyle">@style/MyStyle.Cardview.Orange</item>

        <item name="android:statusBarColor">@color/darkerBlue</item>
    </style>

    <style name="MyStyle.Cardview.Orange" parent="CardView">
        <item name="cardBackgroundColor">@color/colorSelectedBlue</item>
    </style>

    <style name="MyTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@color/darkGray</item>
    </style>

    <style name="PowerView" parent="@android:style/TextAppearance.Small">
        <item name="android:background">@color/darkerBlue</item>
    </style>
</resources>